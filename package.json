{
  "name": "@advanced-rest-client/arc-data-export",
  "description": "An element to handle data export preparation for ARC",
  "version": "3.0.0",
  "license": "Apache-2.0",
  "main": "arc-data-export.js",
  "keywords": [
    "web-components",
    "arc",
    "advanced-rest-client",
    "export",
    "data",
    "data-export"
  ],
  "authors": [
    "Pawel Psztyc",
    "The Advanced REST client authors <arc@mulesoft.com>"
  ],
  "contributors": [
    "Pawel Psztyc",
    "The Advanced REST client authors <arc@mulesoft.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/advanced-rest-client/arc-data-export.git"
  },
  "bugs": {
    "url": "https://github.com/advanced-rest-client/arc-data-export/issues",
    "email": "arc@mulesoft.com"
  },
  "dependencies": {
    "pouchdb": "^7.1.1"
  },
  "devDependencies": {
    "@advanced-rest-client/arc-data-generator": "^3.0.4",
    "@advanced-rest-client/eslint-config": "^1.1.3",
    "@advanced-rest-client/testing-karma-sl": "^1.0.5",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@open-wc/prettier-config": "^0.1.0",
    "@open-wc/testing": "^2.3.4",
    "@open-wc/testing-karma": "^3.1.38",
    "@polymer/gen-typescript-declarations": "^1.6.2",
    "chance": "^1.1.0",
    "es-dev-server": "^1.18.3",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.1",
    "lit-element": "^2.2.1",
    "sinon": "^7.5.0",
    "deepmerge": "^4.0.0"
  },
  "scripts": {
    "test": "karma start --coverage",
    "start": "es-dev-server --app-index demo/index.html --node-resolve --open --watch",
    "update-types": "gen-typescript-declarations --deleteExisting --outDir .",
    "start:compatibility": "es-dev-server --app-index demo/index.html --compatibility all --node-resolve --open --watch",
    "lint:eslint": "eslint --ext .js,.html .",
    "format:eslint": "eslint --ext .js,.html . --fix",
    "lint:prettier": "prettier \"**/*.js\" --list-different || (echo '↑↑ these files are not prettier formatted ↑↑' && exit 1)",
    "format:prettier": "prettier \"**/*.js\" --write",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:legacy": "karma start --compatibility all --coverage",
    "test:legacy:watch": "karma start --compatibility all --auto-watch=true --single-run=false",
    "test:sl": "karma start karma.sl.config.js --compatibility all --coverage"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
